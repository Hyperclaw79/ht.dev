{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Dev Server",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Linting",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "lint"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "console": "integratedTerminal"
        }
    ],
    "compounds": [
        {
            "name": "Launch Dev",
            "configurations": [
                "Run Dev Server",
                "Launch Chrome"
            ]
        }
    ]
}