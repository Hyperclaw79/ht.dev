{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Dev",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "console": "integratedTerminal"
        },
        {
            "name": "PocketBase",
            "request": "launch",
            "command": "pocketbase.exe serve",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/src/routes/data"
        },
        {
            "name": "Prod",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "preview"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "console": "integratedTerminal",
            "preLaunchTask": "build"
        },
        {
            "name": "Linting",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "lint"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "console": "integratedTerminal"
        },
        {
            "name": "Run Tests",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--experimental-modules",
                "--experimental-vm-modules",
                "${workspaceRoot}/node_modules/jest/bin/jest.js"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal"
        }
    ],
    "compounds": [
        {
            "name": "Dev and PocketBase",
            "configurations": [
                "PocketBase",
                "Dev"
            ],
            "stopAll": true
        },
        {
            "name": "Prod and PocketBase",
            "configurations": [
                "Prod",
                "PocketBase"
            ],
            "stopAll": true
        }
    ]
}