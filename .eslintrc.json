{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "svelte3"
    ],
    "ignorePatterns": [
        "public/build/",
        "node_modules/",
        "rollup.config.js",
        "scripts/setupTypeScript.js"
    ],
    "overrides": [
        {
            "files": [
                "**/*.svelte"
            ],
            "processor": "svelte3/svelte3"
        }
    ],
    "rules": {
        "semi": [2, "always"],
        "indent": ["error", 4],
        "quotes": [
            "error",
            "double",
            {
                "allowTemplateLiterals": true
            }
        ]
    }
}