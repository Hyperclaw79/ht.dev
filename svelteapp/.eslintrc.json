{
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "standard",
        "plugin:svelte/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": [
        "build/"
    ],
    "overrides": [
        {
            "files": [
                "**/*.svelte"
            ],
            "parser": "svelte-eslint-parser"
        }
    ],
    "rules": {
        "semi": [2, "always"],
        "indent": ["error", 4],
        "quotes": [
            "error",
            "double",
            {
                "allowTemplateLiterals": true
            }
        ],
        "import/first": "off",
        "no-multiple-empty-lines": ["error", { "max": 1, "maxBOF": 2, "maxEOF": 0 }]
    }
}